<%if !@session[:tweet_errors].nil?%>
  <h3>Error!</h3>
  <%@session[:tweet_errors].each do |error, message|%>
    <p><%=error%> <%=message%></p>
  <%end%>
<%end%>

<h2>Keep Calm and Tweet It:</h2>
<form method = "POST" action="/tweets">
<input type = "text" name = "content" id="content">
<input type = "submit" value = "submit">
</form>
